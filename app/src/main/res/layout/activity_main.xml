<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.algonquincollege.razp0002.hsvcolorpicker.MainActivity"
    android:background="@android:color/transparent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/colorSwatch"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Hue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:layout_below="@+id/colorSwatch"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:id="@+id/hueSb" />

    <TextView
        android:text="Saturation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:id="@+id/saturation"
        android:layout_below="@+id/hueSb"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saturation"
        android:id="@+id/saturationSb"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:layout_below="@+id/saturationSb"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:id="@+id/valueSb" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/valueSb"
        android:layout_toEndOf="@+id/saturation"
        android:layout_marginTop="88dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:text="Black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/blackBtn"
                android:layout_weight="0.27"
                android:textColor="@android:color/white"
                android:background="#000000" />

            <Button
                android:text="Red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/redBtn"
                android:layout_weight="0.28"
                android:textColor="@android:color/white"
                android:background="#FF0000" />

            <Button
                android:text="Lime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/limeBtn"
                android:layout_weight="0.29"
                android:textColor="@android:color/white"
                android:background="#00FF00" />

            <Button
                android:text="Blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/blueBtn"
                android:layout_weight="0.31"
                android:textColor="@android:color/white"
                android:background="#0000FF" />

            <Button
                android:text="Yellow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/yellowBtn"
                android:layout_weight="0.33"
                android:textColor="@android:color/white"
                android:background="#FFFF00" />

            <Button
                android:text="Cyan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cyanBtn"
                android:layout_weight="0.36"
                android:textColor="@android:color/white"
                android:background="#00FFFF" />

            <Button
                android:text="Magenta"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/magentaBtn"
                android:layout_weight="0.39"
                android:textColor="@android:color/white"
                android:background="#FF00FF" />

            <Button
                android:text="Silver"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/silverBtn"
                android:layout_weight="0.43"
                android:textColor="@android:color/white"
                android:background="#C0C0C0" />

            <Button
                android:text="Grey"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/greyBtn"
                android:layout_weight="0.49"
                android:textColor="@android:color/white"
                android:background="#808080" />

            <Button
                android:text="Maroon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/maroonBtn"
                android:layout_weight="0.57"
                android:textColor="@android:color/white"
                android:background="#800000" />

            <Button
                android:text="Olive"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/oliveBtn"
                android:layout_weight="0.71"
                android:textColor="@android:color/white"
                android:background="#808000" />

            <Button
                android:text="Green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/greenBtn"
                android:layout_weight="0.73"
                android:textColor="@android:color/white"
                android:background="#008000" />

            <Button
                android:text="Purple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/purpleBtn"
                android:layout_weight="0.76"
                android:textColor="@android:color/white"
                android:background="#800080" />

            <Button
                android:text="Teal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tealBtn"
                android:textColor="@android:color/white"
                android:background="#008080" />

            <Button
                android:text="Navy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/navyBtn"
                android:textColor="@android:color/white"
                android:background="#000080" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
